        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

        <Image Grid.Column="1"
               Source="north.png"
               SemanticProperties.Description="north"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Image Grid.Column="0"
               Grid.Row="0"
               Source="northwest.png"
               SemanticProperties.Description="northwest"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Image Grid.Column="0"
               Grid.Row="2"
               Source="southwest.png"
               SemanticProperties.Description="southwest"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Image Grid.Column="2"
               Grid.Row="2"
               Source="southeast.png"
               SemanticProperties.Description="southeast"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Image Grid.Column="2"
               Grid.Row="0"
               Source="northeast.png"
               SemanticProperties.Description="northeast"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Image Grid.Row="1"
               Source="west.png"
               SemanticProperties.Description="west"
               HorizontalOptions="End"
               VerticalOptions="Center" />
        <Image Grid.Row="1"
               Grid.Column="1"
                Source="finalarrow.png"
                x:Name="Arrow"
                HeightRequest="70"
                SemanticProperties.Description="Robot thing idk"
                VerticalOptions="Center"
                Rotation="{Binding ArrowAngle}"
                HorizontalOptions="Center" 
               />
        <Image Grid.Row="1"
               Grid.Column="2"
               Source="east.png"
               SemanticProperties.Description="east"
               HorizontalOptions="Start"
               VerticalOptions="Center" />
        <Image Grid.Row="2"
               Grid.Column="1"
               Source="south.png"
               SemanticProperties.Description="south"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <Label Text="{Binding TargetName}"
               Grid.Row="4"
               Grid.Column="0"/>
           
        <Label Text="{Binding TimeTaken}"
               Grid.Row="4"
               Grid.Column="0"/>
        <Button Grid.Row="5"
                Grid.Column="1"
                x:Name="Kill"
                Text="Eliminate"
                IsVisible="{Binding ButtonVisible}"
                Command="{Binding KillButtonCommand}"
                />
        <Button Text="Back"
                Grid.Row="5"
                Grid.Column="0"
                Clicked="Button_Clicked"></Button>

    </Grid>

