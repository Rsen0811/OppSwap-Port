<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OppSwap.NicknamePage"
             x:DataType="viewmodel:NicknamePageViewModel"
             xmlns:viewmodel="clr-namespace:OppSwap.ViewModels"
             >
            
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button Text="Back"
                    Clicked="OnCounterClicked"></Button>
            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Entry
                Placeholder="enter your nickname"
                Text="{Binding Nickname}"
                FontSize="32"
                HorizontalOptions="Center"
                />
            <Button
                x:Name="ChangeNameButton"
                Text="Change Name"
                Command="{Binding changeNameCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
