<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OppSwap.NicknamePage"
             x:DataType="viewmodel:NicknamePageViewModel"
             xmlns:viewmodel="clr-namespace:OppSwap.ViewModels"
             >

    <Grid RowDefinitions=" Auto, *"
          ColumnDefinitions=".70*, .30*"
          Padding="10"
          RowSpacing="2"
          ColumnSpacing="2">


        
        <Entry Placeholder="Enter Nickname"
               Text="{Binding Nickname}"
               FontSize="15"
               Grid.Row="0"/>
        <Image
                Source="logo_test.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                Grid.Row="3"
                Grid.Column="0"
                />
        <Button
        x:Name="JoinButton"
        Text="Set"
        FontSize="15"
        Command="{Binding changeNameCommand}"
        Grid.Row="0"
         Grid.Column="3"/>

        <Button
        x:Name="BackButtton"
        Text="Back"
        FontSize="15"
        Clicked="OnCounterClicked"
        Grid.Row="2"
         Grid.Column="3"/>


    </Grid>

</ContentPage>
