<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OppSwap.NicknamePage"
             x:DataType="viewmodel:NicknamePageViewModel"
             xmlns:viewmodel="clr-namespace:OppSwap.ViewModels"
             >

    <Grid RowDefinitions="100, Auto, *"
          ColumnDefinitions=".75*, .25*"
          Padding="10"
          RowSpacing="2"
          ColumnSpacing="2">


        
        <Entry Placeholder="Enter Nickname"
               Text="{Binding Nickname}"
               Grid.Row="1"/>
        <Image
                Source="logo_test.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                Grid.RowSpan="7"
                Grid.ColumnSpan="4"
                Grid.Row="3"
                />
        <Button
        x:Name="JoinButton"
        Text="Set Nickname"
        FontSize="20"
        Command="{Binding changeNameCommand}"
        Grid.Row="1"
         Grid.Column="3"/>

        <Button
        x:Name="BackButtton"
        Text="Back"
        FontSize="20"
        Clicked="OnCounterClicked"
        Grid.Row="2"
         Grid.Column="3"/>


    </Grid>

</ContentPage>
