<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OppSwap.JoinPage"
             x:DataType="viewmodel:JoinPageViewModel"
             xmlns:viewmodel="clr-namespace:OppSwap.ViewModels"
             >
    <Grid RowDefinitions="100, Auto, *"
          ColumnDefinitions=".75*, .25*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">

        <Image Grid.ColumnSpan="2"
               Source="dotnet_bot.png"/>
        <Entry Placeholder="Enter text"
               Text="{Binding GameCode}"
               Grid.Row="1"/>
        <Button Text="Join"
                Command="{Binding AddCommand}"
                Grid.Row="1"
                Grid.Column="1"/>
        <CollectionView Grid.Row="2" Grid.ColumnSpan="2"

                        ItemsSource="{Binding GamesJoined}">

                <CollectionView.ItemTemplate>


                    <DataTemplate x:DataType="{x:Type x:String}">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="leave"
                                               BackgroundColor="Red">


                                    </SwipeItem>

                                </SwipeItems>

                            </SwipeView.RightItems>
                            <Grid Padding="0,5">
                                <Frame>
                                    <Label Text="{Binding .}"
                                        FontSize="24"/>

                                </Frame>

                            </Grid>

                        </SwipeView>

                    </DataTemplate>


                </CollectionView.ItemTemplate>



        </CollectionView>
         <Button Text="Create"
                Clicked = "GoToCreatePage"
                Grid.Row="5"
                Grid.Column="5"/>

    </Grid>

                     
</ContentPage>
