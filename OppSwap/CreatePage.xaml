<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OppSwap.CreatePage"
             x:DataType="viewmodel:CreatePageViewModel"
             xmlns:viewmodel="clr-namespace:OppSwap.ViewModels"
             >
            
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button Text="Back"
                    Clicked="OnCounterClicked"></Button>
            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Entry
                Placeholder="enter game code"
                Text="{Binding GameCode}"
                FontSize="32"
                HorizontalOptions="Center"
                />
            <Button
                x:Name="CreateRoomButton"
                Text="Create Game"
                Command="{Binding createRoomCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
